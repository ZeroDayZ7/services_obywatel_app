# ==============================================================================
# AUTH-SERVICE - MAIN CONFIGURATION
# ==============================================================================

# Server
APP_NAME=auth-service
PORT=8082
ENV=development
APP_VERSION=0.1.0
SERVER_HEADER=ZeroDayZ7
PREFORK=false
CASE_SENSITIVE=true
STRICT_ROUTING=false

# Czas trwania (Duration) - format: 30s, 15m, 1h
IDLE_TIMEOUT=30s
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s

# ==============================================================================
# SECURITY & AUTH
# ==============================================================================

# JWT Secrets (Generuj mocne losowe ciągi na produkcji)
JWT_ACCESS_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here

# TTL dla tokenów (np. 15m, 24h, 168h)
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h

# Klucz do komunikacji wewnętrznej (musi być identyczny we wszystkich mikroserwisach)
INTERNAL_HMAC_SECRET=your_internal_hmac_secret_at_least_64_chars

# ==============================================================================
# DATABASE (PostgreSQL)
# ==============================================================================

# Format: postgres://user:password@host:port/dbname?sslmode=disable
DATABASE_DSN=postgres://admin:password@127.0.0.1:5432/auth_db?sslmode=disable
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=30m

# ==============================================================================
# INFRASTRUCTURE
# ==============================================================================

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Sessions
REDIS_SESSION_PREFIX=session:
REDIS_SESSION_TTL=60m

# Telemetry (OpenTelemetry)
OTEL_ENABLED=false
OTEL_ENDPOINT=localhost:4318
OTEL_SERVICE_NAME=auth

# ==============================================================================
# SYSTEM
# ==============================================================================

# Czas na bezpieczne zakończenie procesów
SHUTDOWN_TIMEOUT=5s